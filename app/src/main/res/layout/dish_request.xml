<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:text="Request for"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView47" android:background="@color/DarkBlue"
            android:textColor="@color/White" android:gravity="start" android:padding="8dp" android:textSize="18dp"
            android:textStyle="bold" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Kadai paneer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dish_name_request" android:textSize="18dp"
            android:textColor="@color/Black" android:textStyle="bold" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView47"/>
    <TextView
            android:text="Unit price:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView53" android:textSize="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/view5"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/tv_date_request"
            app:layout_constraintTop_toBottomOf="@+id/textView78" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp" android:text="25/07/2019"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/LightGrey"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tv_date_request"
            android:id="@+id/view13"/>
    <TextView
            android:text="Pick time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView54" android:textSize="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/view13"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="12dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/tv_time_request"
            app:layout_constraintTop_toBottomOf="@+id/textView54" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_proceed_request" android:text="12:50 PM"/>
    <TextView
            android:text="PROCEED"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_proceed_request" android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:padding="8dp" android:textColor="@color/White"
            android:background="@color/DarkBlue" android:gravity="center" android:textStyle="bold"/>
    <TextView
            android:text="Quantity:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView59"
            app:layout_constraintTop_toTopOf="@+id/tv_dish_name_request" app:layout_constraintEnd_toStartOf="@+id/tv_quantity_request"
            android:layout_marginEnd="4dp" android:textSize="16dp"/>
    <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/tv_quantity_request" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp" android:text="10"
            app:layout_constraintTop_toBottomOf="@+id/textView47" android:gravity="center"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/LightGrey"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_dish_name_request" android:layout_marginTop="8dp"
            android:id="@+id/view5"/>
    <TextView
            android:text="Rs.99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_unit_price_request" android:textSize="16dp"
            app:layout_constraintTop_toTopOf="@+id/textView53" android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/textView53" android:textStyle="bold"
            android:textColor="@color/Black"/>
    <TextView
            android:text="Total:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView66" android:textSize="16dp"
            app:layout_constraintTop_toTopOf="@+id/tv_unit_price_request" app:layout_constraintEnd_toStartOf="@+id/tv_total_price_request"
            android:layout_marginEnd="4dp"/>
    <TextView
            android:text="Rs.999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_total_price_request" android:textSize="16dp"
            app:layout_constraintTop_toTopOf="@+id/textView66" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp" android:textStyle="bold" android:textColor="@color/Black"/>
    <TextView
            android:text="Jessica Jones, A2-503"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_chef_name_with_flat_number_request" android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/textView53" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp" android:layout_marginTop="4dp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/LightGrey"
            app:layout_constraintTop_toBottomOf="@+id/tv_chef_name_with_flat_number_request"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/view12"/>
    <TextView
            android:text="Pick date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView78" android:textSize="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/view12"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="12dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>