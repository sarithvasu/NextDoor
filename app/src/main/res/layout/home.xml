<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/view"
            android:background="@color/White"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView_home_buyer">
        <LinearLayout

                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:background="@drawable/border"
                android:orientation="vertical">
            <TextView
                    android:text="@string/ongoing"
                    android:paddingTop="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:background="@color/DarkBlue"
                    android:id="@+id/tv_ongoing" android:layout_weight="1"
                    android:textColor="@color/White" android:gravity="center"
                    android:textSize="16dp"/>
            <TextView
                    android:text="Dish 6 | 15 Meals"
                    android:paddingBottom="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:background="@color/DarkBlue"
                    android:id="@+id/tv_dish_count" android:layout_weight="1"
                    android:textColor="@color/White" android:gravity="center"
                    android:textSize="14dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="-1dp"
                android:background="@drawable/border"
                android:orientation="vertical">
            <TextView
                    android:text="@string/tomorrows"
                    android:paddingTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:id="@+id/tv_tomorow" android:layout_weight="1"
                    android:textColor="@color/Black" android:gravity="center" android:textSize="16dp"/>
            <TextView
                    android:text="Dish 16 | 5 Meals"
                    android:paddingBottom="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:id="@+id/tv_dish_count_tomorow"
                    android:layout_weight="1" android:textColor="@color/Orange" android:gravity="center"
                    android:textSize="14dp"/>

        </LinearLayout>


        <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginLeft="-1dp"
                android:background="@drawable/border"
                android:orientation="vertical">


            <TextView
                    android:text="@string/customized"
                    android:paddingTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:id="@+id/tv_custom_meals" android:layout_weight="1"
                    android:textColor="@color/Black" android:gravity="center" android:textSize="16dp"/>


            <TextView

                    android:paddingBottom="6dp"

                    android:layout_width="wrap_content"
                    android:layout_height="0dp"

                    android:layout_gravity="center"
                    android:id="@+id/tv_your_meal" android:layout_weight="1"
                    android:text="Your Meals" android:textColor="@color/Orange" android:gravity="center"
                    android:textSize="14dp"/>

        </LinearLayout>


    </LinearLayout>


    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_home_buyer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#0FFFFFFB"

            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"/>


</android.support.constraint.ConstraintLayout>