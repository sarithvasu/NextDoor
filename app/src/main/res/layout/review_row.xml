<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="Yummy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_review_tag_name_row" android:textSize="16sp"
            android:textColor="@color/Black" android:textStyle="bold" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp" android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="June 6th 2019"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_date_review_row" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar"/>
    <TextView
            android:text="Tanuja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_buyer_name_review_row" android:textStyle="bold"
            android:textColor="@color/Black" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="4dp"
            android:layout_marginTop="4dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="A2-503, PWC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_chef_address_with_flat_number_review_row"
            android:textColor="@color/Black"
            app:layout_constraintTop_toBottomOf="@+id/tv_buyer_name_review_row"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="4dp"/>
    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            android:rating="5"
            style="@style/Widget.AppCompat.RatingBar.Small" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp" app:layout_constraintTop_toBottomOf="@+id/tv_review_tag_name_row"/>
    <TextView
            android:text="Food is so delicious and tasty and i felt like eating more. Such a tasty and delicious food it is"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_review_discription_review_row" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_date_review_row" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="4dp" android:maxLines="2"/>
    <TextView
            android:text="See more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView66" android:textColor="@color/DarkBlue"
            app:layout_constraintTop_toBottomOf="@+id/tv_review_discription_review_row"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"/>
    <TextView
            android:text="69"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView67"
            app:layout_constraintEnd_toStartOf="@+id/imageView4"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_review_discription_review_row" android:layout_marginTop="4dp"/>
    <TextView
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dish_dislikes_review_row"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_review_discription_review_row" android:layout_marginTop="4dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/like"
            android:id="@+id/imageView2"
            app:layout_constraintEnd_toStartOf="@+id/textView67" android:layout_marginEnd="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_review_discription_review_row"
    />
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/dislike2"
            android:id="@+id/imageView4"
            app:layout_constraintEnd_toStartOf="@+id/tv_dish_dislikes_review_row"
            android:layout_marginEnd="4dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_review_discription_review_row"
            android:layout_marginTop="4dp"/>
</android.support.constraint.ConstraintLayout>