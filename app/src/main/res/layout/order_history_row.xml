<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/nonveg_symbol"
            android:id="@+id/img_dish_type_history_row"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
    <TextView
            android:text="Chicken Biryani"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dish_name_history_row" android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/img_dish_type_history_row"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="4dp" android:textSize="16sp"
            android:textStyle="bold" android:textColor="@color/Black"/>
    <TextView
            android:text="Unit Price:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView31"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView35"/>
    <TextView
            android:text="99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView35" android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/textView31"
            app:layout_constraintTop_toBottomOf="@+id/tv_dish_name_history_row"/>
    <TextView
            android:text="Rs.999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dish_total_price_history_row"
            app:layout_constraintTop_toTopOf="@+id/textView35" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:textColor="@color/Black"/>
    <TextView
            android:text="Total:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView37"
            app:layout_constraintTop_toBottomOf="@+id/tv_dish_name_history_row"
            app:layout_constraintEnd_toStartOf="@+id/tv_dish_total_price_history_row" android:layout_marginEnd="4dp"/>
    <TextView
            android:text="Order ID:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView38" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView31"/>
    <TextView
            android:text="951753"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_order_id_history_row" android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/textView38" app:layout_constraintTop_toBottomOf="@+id/textView31"/>
    <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:background="@color/Black"
            android:id="@+id/view1"
            app:layout_constraintTop_toTopOf="@+id/tv_order_id_history_row" android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/tv_order_id_history_row"/>
    <TextView
            android:text="03-06-2019"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView40"
            app:layout_constraintTop_toBottomOf="@+id/textView31" android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/view1"/>
    <TextView
            android:text="@string/chef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView41" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView38"/>
    <TextView
            android:text="Jesica Jones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_chef_name_history_row"
            app:layout_constraintTop_toBottomOf="@+id/textView38" android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/textView41"/>
    <TextView
            android:text="A2-503"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_chef_flat_number_history_row"
            app:layout_constraintTop_toBottomOf="@+id/textView40" android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/tv_chef_name_history_row"/>
    <TextView
            android:text="Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView44" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textView41"/>
    <TextView
            android:text="In-Progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_order_status_history_row"
            app:layout_constraintTop_toBottomOf="@+id/tv_chef_name_history_row" android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/textView44" android:textColor="@color/Black"/>
    <TextView
            android:text="Rated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView46" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView44" android:layout_marginTop="16dp"/>
    <TextView
            android:text="Repeat Order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView47"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:textColor="@color/DarkBlue"
            app:layout_constraintTop_toTopOf="@+id/ratingBar_history_row"/>
    <TextView
            android:text="Write Review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView48"
            app:layout_constraintTop_toBottomOf="@+id/textView46" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textColor="@color/DarkBlue"/>
    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar_history_row"
            android:rating="5"
            android:theme="@style/RatingBar"
            style="@style/Widget.AppCompat.RatingBar.Small"
            app:layout_constraintTop_toBottomOf="@+id/tv_order_status_history_row"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/textView46"
            android:layout_marginTop="16dp"/>
</android.support.constraint.ConstraintLayout>