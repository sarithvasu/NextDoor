<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent" android:id="@+id/nestedScrollView3">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <TextView
                android:text="Buyer Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_buyer_name_checkout"
                android:textColor="@color/DarkGrey"
                android:textStyle="bold" android:textSize="16dp"
                android:ellipsize="middle" android:singleLine="true"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView29" android:layout_marginTop="4dp"/>
        <TextView
                android:text="A2-509"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_buyer_address_with_flat_number_checkout"
                android:textColor="@color/DarkGrey"
                android:textStyle="bold" android:textSize="16dp" android:ellipsize="middle"
                android:singleLine="true"
                app:layout_constraintTop_toTopOf="@+id/tv_buyer_name_checkout"
                app:layout_constraintStart_toEndOf="@+id/tv_buyer_name_checkout" android:layout_marginStart="4dp"/>


        <TextView
                android:text="+91 9739209885"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_buyer_phone_number_checkout"
                android:textStyle="bold"
                android:ellipsize="middle"
                android:textSize="16dp" android:singleLine="true"
                app:layout_constraintTop_toTopOf="@+id/tv_buyer_address_with_flat_number_checkout"
                app:layout_constraintStart_toEndOf="@+id/tv_buyer_address_with_flat_number_checkout"
                android:layout_marginStart="4dp" android:textColor="@color/DarkGrey"/>


        <TextView
                android:text="Item Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:background="@color/LightGrey"
                android:textStyle="bold"
                android:textColor="@color/Black"
                android:id="@+id/textView12" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:padding="4dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_buyer_name_checkout" android:layout_marginTop="8dp"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerView_checkout"
                app:layout_constraintTop_toBottomOf="@+id/textView12"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="12dp" android:layout_marginEnd="12dp"
                android:layout_marginTop="12dp"/>
        <TextView
                android:text="Add More Items + "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:background="@color/LightGrey"
                android:textStyle="bold"
                android:textColor="@color/Black"
                android:id="@+id/tv_add_more_items_checkout"
                app:layout_constraintTop_toBottomOf="@+id/recyclerView_checkout"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:padding="4dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginTop="4dp"/>

        <TextView
                android:text="Bill Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView21" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:background="@color/LightGrey"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/Black"
                android:padding="4dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tv_add_more_items_checkout"/>


        <TextView
                android:text="Select Payment Mode:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView33"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/Black" android:padding="4dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/recyclerView_bill_details_checkout"
                app:layout_constraintHorizontal_bias="0.0" android:background="@color/LightGrey"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/textView21" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp" android:layout_marginEnd="12dp"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/recyclerView_bill_details_checkout"
                app:layout_constraintHorizontal_bias="0.0"/>
        <TextView
                android:text="Digital Payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView28" android:textSize="16dp"
                android:textStyle="bold" android:textColor="@color/Black"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:background="@color/LightGrey" android:padding="4dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_payment_cash_checkout" android:layout_marginTop="8dp"/>
        <TextView
                android:text="Proceed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_place_order_checkout"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center" android:padding="4dp" android:textSize="20dp"
                android:textColor="@color/White" android:background="@color/DarkBlue"
                android:textStyle="bold"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView28" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:id="@+id/linearLayout8" android:padding="4dp">
            <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/gpay" />
            <TextView
                    android:id="@+id/tv_payment_gpay_checkout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="G-Pay"
                    android:textColor="@color/DarkGrey"
                    android:textSize="16dp"
                    android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout8"
                android:id="@+id/linearLayout9" android:padding="4dp">
            <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/paytm" />
            <TextView
                    android:id="@+id/tv_payment_paytm_checkout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Paytm"
                    android:textColor="@color/DarkGrey"
                    android:textSize="16dp"
                    android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout9" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:id="@+id/linearLayout10" android:padding="4dp"
                android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/tv_place_order_checkout">
            <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/phonepe" />
            <TextView
                    android:id="@+id/tv_payment_phonepe_checkout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Phone Pe"
                    android:textColor="@color/DarkGrey"
                    android:textSize="16dp"
                    android:textStyle="bold" />
        </LinearLayout>
        <CheckBox
                android:text="Cash on delivery (Keeping exact change is appricieated)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_payment_cash_checkout" android:checked="true"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView33"
                android:background="@color/LightGrey" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:buttonTint="@color/Orange"/>
        <TextView
                android:text="Delivery details:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView29" android:textSize="18dp"
                android:textColor="@color/Black" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:background="@color/LightGrey"
                android:textStyle="bold" android:padding="4dp"/>
        <TextView
                android:text="Edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_edit_checkout"
                app:layout_constraintTop_toTopOf="@+id/tv_buyer_phone_number_checkout"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/SkyBlue" android:textStyle="bold"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>