<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:fillViewport="true"
        android:background="@color/LightGrey"
        android:layout_height="match_parent">


    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/linear_layout_1" android:weightSum="7">
            <android.support.constraint.ConstraintLayout
                    android:id="@+id/constraint_layout_1_checkout"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:background="#ffffff" android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp" android:layout_marginTop="8dp" android:paddingBottom="8dp">

                <com.mikhaellopez.circularimageview.CircularImageView
                        android:layout_width="90dp"
                        android:layout_height="80dp" app:srcCompat="@drawable/profile"
                        android:id="@+id/img_chef_profile_checkout" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="35dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="35dp"
                        android:layout_marginTop="4dp"/>
                <TextView
                        android:text="Anushka Shetty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_chef_name_checkout"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/img_chef_profile_checkout"
                        android:textColor="#1565C0" android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="4dp"/>
                <TextView
                        android:text="A2-503 PWC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_chef_address_with_flat_number_checkout"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"
                        android:textStyle="bold" app:layout_constraintTop_toBottomOf="@+id/tv_chef_name_checkout"/>
                <TextView
                        android:text="Chef Rating:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView7" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="4dp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_chef_address_with_flat_number_checkout"
                        android:textColor="#000000"/>
                <TextView
                        android:text="430"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_dishes_served_checkout"
                        app:layout_constraintStart_toEndOf="@+id/textView7"
                        android:layout_marginStart="4dp"
                        android:textColor="#1565C0"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="@+id/textView7"/>
            </android.support.constraint.ConstraintLayout>
            <android.support.constraint.ConstraintLayout
                    android:id="@+id/constraint_layout_2_checkout"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:background="#ffffff" android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp" android:paddingBottom="8dp">

                <com.mikhaellopez.circularimageview.CircularImageView
                        android:layout_width="90dp"
                        android:layout_height="80dp" app:srcCompat="@drawable/ambani"
                        android:id="@+id/img_buyer_profile_checkout" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="4dp" app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="4dp"/>
                <TextView
                        android:text="Mukesh Ambani"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_buyer_name_checkout"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="12dp"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toEndOf="@+id/img_buyer_profile_checkout" android:textColor="#000000"
                        android:textStyle="bold"/>
                <TextView
                        android:text="A2-509 PWC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_buyer_address_with_flat_number_checkout"
                        app:layout_constraintTop_toBottomOf="@+id/tv_buyer_name_checkout"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toEndOf="@+id/img_buyer_profile_checkout" android:textColor="#1565C0"
                        android:textStyle="bold"/>
                <TextView
                        android:text="abchefghijk@gmail.com"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_buyer_email_checkout"
                        android:layout_marginTop="36dp"
                        app:layout_constraintTop_toBottomOf="@+id/img_buyer_profile_checkout" android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/textView18" android:layout_marginStart="4dp"/>
                <TextView
                        android:text="+91 9739209885"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_buyer_phone_number_checkout"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@+id/tv_buyer_email_checkout"
                        android:layout_marginStart="4dp"
                        app:layout_constraintStart_toEndOf="@+id/textView17"/>
                <TextView
                        android:text="Mob:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView17"
                        app:layout_constraintTop_toBottomOf="@+id/textView18"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"/>
                <TextView
                        android:text="Email:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView18" android:layout_marginTop="36dp"
                        app:layout_constraintTop_toBottomOf="@+id/img_buyer_profile_checkout"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
        <TextView
                android:text="Item Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/Black"
                android:id="@+id/textView12" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/linear_layout_1"/>
        <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerView_checkout"
                android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/textView12"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:text="Add More Items + "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/Black"

                android:id="@+id/textView14"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/recyclerView_checkout"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="#000000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView14"
                android:layout_marginTop="8dp" android:id="@+id/view5"/>
        <TextView
                android:text="Bill Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView21" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/Black"


                app:layout_constraintTop_toBottomOf="@+id/view5"/>
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/textView21" android:background="@color/White"
                android:id="@+id/constraintLayout2">

            <TextView
                    android:text="SubTotal:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView22"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"/>
            <TextView
                    android:text="Rs.999"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_subtotal_checkout"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:textColor="@color/Black"/>
            <TextView
                    android:text="Delivery Charges:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView27"
                    app:layout_constraintTop_toBottomOf="@+id/textView22" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"/>
            <TextView
                    android:text="Rs.200"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_delivery_charges_checkout"
                    app:layout_constraintTop_toBottomOf="@+id/tv_subtotal_checkout" android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:textColor="@color/Black"/>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/LightGrey"
                    android:id="@+id/view6"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/textView27"/>
            <TextView
                    android:text="Total:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView30"
                    app:layout_constraintTop_toBottomOf="@+id/textView27" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginTop="8dp"/>
            <TextView
                    android:text="Rs.1199"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_total_price_checkout"
                    app:layout_constraintTop_toBottomOf="@+id/tv_delivery_charges_checkout"
                    android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp" android:textColor="@color/Black" android:textStyle="bold"/>
        </android.support.constraint.ConstraintLayout>


        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="#000000"
                android:id="@+id/view7"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
        />
        <TextView
                android:text="Select Payment Mode:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView33" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/view7" android:textStyle="bold" android:textSize="16sp"/>
        <TextView
                android:text="PLACE ORDER"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView34"
                app:layout_constraintBottom_toBottomOf="parent" android:textSize="20sp" android:textStyle="bold"
                android:textColor="@color/White" android:gravity="center" android:background="@color/DarkBlue"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView33"
                app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="1.0"
                android:paddingTop="4dp" android:paddingBottom="4dp"/>
        <Button
                android:text="COD"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:id="@+id/button2" android:padding="4dp"
                android:background="@color/DarkBlue" android:textColor="@color/White"
                android:textStyle="bold" app:layout_constraintStart_toEndOf="@+id/textView33"
                android:layout_marginStart="8dp" android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/view7"/>
        <Button
                android:text="PAYTM"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:id="@+id/button3" android:padding="4dp"
                android:background="@color/DarkBlue" android:textColor="@color/White"
                android:textStyle="bold" app:layout_constraintStart_toEndOf="@+id/button2"
                android:layout_marginStart="8dp" android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/view7"/>
        <Button
                android:text="Gpay"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:id="@+id/button4" android:padding="4dp"
                android:background="@color/DarkBlue" android:textColor="@color/White"
                android:textStyle="bold"
                android:layout_marginTop="15dp" app:layout_constraintTop_toBottomOf="@+id/view7"
                app:layout_constraintStart_toEndOf="@+id/button3" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    </android.support.constraint.ConstraintLayout>


</android.support.v4.widget.NestedScrollView>