<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent" android:id="@+id/nestedScrollView3">


    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="90dp"
                android:layout_height="80dp" app:srcCompat="@drawable/ambani"
                android:id="@+id/img_buyer_profile_checkout"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="12dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp"/>
        <TextView
                android:text="Mukesh Ambani"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_buyer_name_checkout"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/img_buyer_profile_checkout" android:textColor="#000000"
                android:textStyle="bold" android:textSize="16dp"
                app:layout_constraintTop_toTopOf="@+id/img_buyer_profile_checkout" android:layout_marginTop="12dp"/>
            <TextView
                    android:text="A2-509 PWC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_buyer_address_with_flat_number_checkout"
                    app:layout_constraintTop_toBottomOf="@+id/tv_buyer_name_checkout"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toEndOf="@+id/img_buyer_profile_checkout" android:textColor="#1565C0"
                    android:textStyle="bold" android:textSize="16dp"/>
        <TextView
                android:text="abchefghijk@gmail.com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_buyer_email_checkout"
                android:textStyle="bold"
                android:singleLine="true"
                app:layout_constraintStart_toEndOf="@+id/textView18"
                android:layout_marginStart="4dp"
                android:textSize="16sp"
                android:ellipsize="middle"
                app:layout_constraintTop_toTopOf="@+id/textView18"/>
            <TextView
                    android:text="+91 9739209885"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_buyer_phone_number_checkout"
                    android:textStyle="bold"
                    android:ellipsize="middle"
                    app:layout_constraintTop_toBottomOf="@+id/tv_buyer_email_checkout"
                    android:layout_marginStart="4dp"
                    app:layout_constraintStart_toEndOf="@+id/textView17" android:textSize="16dp"/>
        <TextView
                android:text="Mob:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView17"
                app:layout_constraintTop_toBottomOf="@+id/textView18"
                android:textSize="16dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp"/>
        <TextView
                android:text="Email:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView18" android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/img_buyer_profile_checkout"
                android:textSize="16dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp"/>
        <TextView
                android:text="Item Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/Black"
                android:id="@+id/textView12" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/textView17"/>
        <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerView_checkout"
                android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/textView12"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:text="Add More Items + "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/Black"

                android:id="@+id/textView14"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/recyclerView_checkout"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="#000000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView14"
                android:layout_marginTop="8dp" android:id="@+id/view5"/>
        <TextView
                android:text="Bill Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView21" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="15dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/Black"


                app:layout_constraintTop_toBottomOf="@+id/view5"/>


        <TextView
                android:text="Select Payment Mode:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView33" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:textStyle="bold" android:textSize="16dp"
                android:layout_marginTop="15dp" app:layout_constraintTop_toBottomOf="@+id/table_layout_checkout"/>
        <TextView
                android:text="PLACE ORDER"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView34"
                app:layout_constraintBottom_toBottomOf="parent" android:textSize="20dp" android:textStyle="bold"
                android:textColor="@color/White" android:gravity="center" android:background="@color/DarkBlue"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:paddingTop="4dp" android:paddingBottom="4dp"
                android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/imageView11"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/gpay_32"
                android:id="@+id/imageView9"
                app:layout_constraintTop_toBottomOf="@+id/textView33" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/paytm_32"
                android:id="@+id/imageView10" app:layout_constraintTop_toBottomOf="@+id/imageView9"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/pay_32"
                android:id="@+id/imageView11" app:layout_constraintTop_toBottomOf="@+id/imageView10"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
        <TextView
                android:text="G pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView72"
                app:layout_constraintTop_toTopOf="@+id/imageView9" android:layout_marginTop="4dp"
                android:layout_marginStart="12dp" app:layout_constraintStart_toEndOf="@+id/imageView9"/>
        <TextView
                android:text="Paytm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView74" android:layout_marginTop="4dp"
                app:layout_constraintTop_toTopOf="@+id/imageView10" android:layout_marginStart="12dp"
                app:layout_constraintStart_toEndOf="@+id/imageView10"/>
        <TextView
                android:text="COD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView75" android:layout_marginTop="4dp"
                app:layout_constraintTop_toTopOf="@+id/imageView11"
                app:layout_constraintStart_toEndOf="@+id/imageView11" android:layout_marginStart="12dp"/>
        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/textView21"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/table_layout_checkout">
            <TableRow android:weightSum="2" android:layout_height="wrap_content" android:layout_width="match_parent">
                <TextView
                        android:text="SubTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView22"
                        android:layout_weight="1" android:textSize="16dp" android:paddingStart="4dp"/>
                <TextView
                        android:text="Rs. 999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_subtotal_price_checkout"
                        android:gravity="right"
                        android:layout_weight="1" android:textSize="16dp" android:paddingEnd="4dp"/>
            </TableRow>
            <TableRow android:weightSum="2" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView
                        android:text="Delivery Charges"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView26"
                        android:layout_weight="1" android:textSize="16dp" android:paddingStart="4dp"/>
                <TextView
                        android:text="Rs. 200"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:id="@+id/tv_delivery_charges_checkout" android:gravity="end" android:textSize="16dp"
                        android:paddingEnd="4dp"/>

            </TableRow>
            <TableRow android:weightSum="2" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView
                        android:text="Paacking Charges"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView30"
                        android:layout_weight="1" android:textSize="16dp" android:paddingStart="4dp"/>
                <TextView
                        android:text="Rs. 100"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_packing_charges_checkout"
                        android:layout_weight="1" android:gravity="end" android:textSize="16dp"
                        android:paddingEnd="4dp"/>
            </TableRow>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:background="@color/DarkGrey"
                    android:id="@+id/view7"/>
            <TableRow android:weightSum="2" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView
                        android:text="Total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView78"
                        android:layout_weight="1" android:textSize="16dp" android:paddingStart="4dp"
                        android:textColor="@color/Black"/>
                <TextView
                        android:text="Rs. 1999"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_total_price_checkout"
                        android:layout_weight="1" android:gravity="end" android:textSize="16dp"
                        android:paddingEnd="4dp" android:textStyle="bold" android:textColor="@color/Black"/>
            </TableRow>
        </TableLayout>



    </android.support.constraint.ConstraintLayout>


</android.support.v4.widget.NestedScrollView>