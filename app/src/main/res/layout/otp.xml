<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:text="Sign Up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView68" android:textSize="30dp"
            android:textStyle="bold" android:textColor="@color/SkyBlue"
            android:padding="4dp" android:gravity="center" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Enter your verification code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView69" android:gravity="center"
            android:textColor="@color/Green" app:layout_constraintTop_toBottomOf="@+id/textView68"
            android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textSize="16dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textView69" android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:weightSum="3" android:layout_marginStart="24dp" android:layout_marginEnd="24dp"
            android:id="@+id/linearLayout5">
        <EditText
                android:layout_width="odp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText4" android:layout_weight="0.5" android:textStyle="bold"
                android:backgroundTint="@color/SkyBlue"/>
        <EditText
                android:layout_width="odp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText5" android:layout_weight="0.5" android:textStyle="bold"
                android:backgroundTint="@color/SkyBlue"/>
        <EditText
                android:layout_width="odp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText8" android:layout_weight="0.5" android:textStyle="bold"
                android:backgroundTint="@color/SkyBlue"/>
        <EditText
                android:layout_width="odp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText7" android:layout_weight="0.5" android:textStyle="bold"
                android:backgroundTint="@color/SkyBlue"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText6" android:layout_weight="0.5" android:textStyle="bold"
                android:backgroundTint="@color/SkyBlue"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText3" android:layout_weight="0.5" android:textStyle="bold"
                android:backgroundTint="@color/SkyBlue"/>
    </LinearLayout>
    <TextView
            android:text="Resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_resend_code_otp" android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5" android:textColor="@color/Orange"
            android:textSize="16dp"/>
    <TextView
            android:text="VERIFY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_verify_otp" android:background="@color/DarkBlue"
            android:textColor="@color/White" android:textStyle="bold" android:gravity="center" android:padding="4dp"
            android:textSize="18dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>
</android.support.constraint.ConstraintLayout>