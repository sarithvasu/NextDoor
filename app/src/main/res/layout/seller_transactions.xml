<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.seller.TransactionDetails">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:weightSum="3" android:id="@+id/linearLayout13">
        <TextView
                android:text="Today's Transaction"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:id="@+id/textView82" android:layout_weight="2"
                android:textSize="24dp" android:background="@color/SkyBlue"
                android:textColor="@color/White" android:textStyle="bold"
                android:gravity="center"/>
        <TextView
                android:text="Rs.1500"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:id="@+id/tv_one_transaction_txn_slr" android:layout_weight="1"
                android:textSize="24dp"
                android:background="@color/SkyBlue" android:textColor="@color/White"
                android:textStyle="bold" android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout13" android:weightSum="2"
            android:id="@+id/linearLayout15">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:layout_weight="1" android:weightSum="2"
                android:layout_marginEnd="2dp">
            <TextView
                    android:text="RS.1000"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" android:id="@+id/tv_one_day_digital_transaction_txn_slr" android:gravity="center"
                    android:background="@color/DarkBlue" android:textColor="@color/White" android:textStyle="bold"
                    android:textSize="18dp" android:layout_weight="1"/>
            <TextView
                    android:text="Digital payment"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" android:id="@+id/textView102" android:gravity="center|fill_vertical"
                    android:background="@color/DarkBlue" android:textColor="@color/SkyBlue" android:textStyle="bold"
                    android:textSize="16dp" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:layout_weight="1" android:weightSum="2"
                android:layout_marginStart="2dp">
            <TextView
                    android:text="Rs.500"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" android:id="@+id/textView103" android:gravity="center"
                    android:background="@color/DarkBlue" android:textColor="@color/White" android:textStyle="bold"
                    android:textSize="18dp" android:layout_weight="1"/>
            <TextView
                    android:text="COD"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" android:id="@+id/tv_one_day_cod_transaction_txn_slr" android:gravity="center"
                    android:background="@color/DarkBlue" android:textColor="@color/SkyBlue" android:textStyle="bold"
                    android:textSize="16dp" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
            android:text="Transaction details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView105" android:textSize="16dp"
            android:textStyle="bold" android:textColor="@color/DarkGrey" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout15"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView105" android:weightSum="2"
            android:id="@+id/linearLayout16">
        <TextView
                android:text="Today's"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/tv_today_txn_slr" android:layout_weight="1"
                android:gravity="center" android:padding="8dp" android:textColor="@color/DarkBlue"
                android:textStyle="bold" android:background="@drawable/border" android:layout_marginStart="8dp"/>
        <TextView
                android:text="previous day's"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/tv_previous_days_txn_slr" android:layout_weight="1"
                android:gravity="center" android:padding="8dp" android:textColor="@color/DarkBlue"
                android:textStyle="bold" android:background="@drawable/border" android:layout_marginStart="8dp"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="395dp"
            android:layout_height="501dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout16"/>
</androidx.constraintlayout.widget.ConstraintLayout>