<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:background="@drawable/empty_border" android:padding="8dp"
>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/LightGrey"
            android:id="@+id/view3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout11"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>

    <TextView
            android:id="@+id/tv_dish_name_history_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:text="Food"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view1" />

    <View
            android:id="@+id/view20"
            android:layout_width="2dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:background="@color/Black"
            app:layout_constraintBottom_toBottomOf="@+id/tv_dish_name_history_row"
            app:layout_constraintStart_toEndOf="@+id/tv_dish_name_history_row"
            app:layout_constraintTop_toTopOf="@+id/tv_dish_name_history_row" />

    <TextView
            android:text="Rs.99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_unit_price_history_row"
            android:textSize="16dp"
            android:textColor="@color/Black" android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/tv_dish_name_history_row" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp"/>

    <TextView
            android:id="@+id/textView38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="Order ID:"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/tv_order_id_history_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="951753"
            android:textColor="@color/Black"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/textView38"
            app:layout_constraintTop_toTopOf="@+id/textView38" />
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/LightGrey"
            android:id="@+id/view1"
            app:layout_constraintTop_toBottomOf="@+id/tv_order_date_and_time_history_row"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>

    <TextView
            android:id="@+id/tv_chef_name_history_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="Jesica Jones"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_order_id_history_row" />

    <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/LightGrey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView155" />

    <TextView
            android:id="@+id/tv_chef_flat_number_history_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="A2-503"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_order_date_and_time_history_row" />
    <TextView
            android:text="Rated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView46"
            android:textSize="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/view3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"/>
    <TextView
            android:text="Write Review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_write_review_history_row"
            android:textColor="@color/DarkBlue"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp" android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/textView46"/>
    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar_history_row"
            android:rating="5"
            android:theme="@style/RatingBar"
            style="@style/Widget.AppCompat.RatingBar.Small"
            app:layout_constraintTop_toTopOf="@+id/textView46" app:layout_constraintStart_toEndOf="@+id/textView46"
            android:layout_marginStart="4dp" android:layout_marginTop="2dp"/>

    <TextView
            android:id="@+id/tv_order_date_and_time_history_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="03-06-2019, 12:30 PM"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView38" />
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2" android:id="@+id/linearLayout11" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/view2" android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <TextView
                    android:text="Payment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textView37" android:layout_weight="1"
                    android:textSize="16dp" android:textStyle="bold"/>
            <TextView
                    android:text="Status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textView35" android:layout_weight="1"
                    android:gravity="center" android:textSize="16dp" android:textStyle="bold"/>
            <TextView
                    android:text="Total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textView40" android:layout_weight="1"
                    android:gravity="end" android:textSize="16dp" android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1">
            <TextView
                    android:text="PAYTM"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/tv_payment_mode_history_row"
                    android:layout_weight="1" android:textSize="16dp"
                    android:textStyle="bold" android:textColor="@color/Black"/>
            <TextView
                    android:text="Delivered"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/tv_order_status_history_row"
                    android:layout_weight="1" android:gravity="center" android:textSize="16dp"
                    android:textStyle="bold" android:textColor="@color/SkyBlue"/>
            <TextView
                    android:text="Rs.400"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/tv_dish_total_price_history_row"
                    android:layout_weight="1" android:gravity="end" android:textSize="16dp"
                    android:textStyle="bold" android:textColor="@color/Orange"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
            android:id="@+id/textView153"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="Chef:"
            android:textColor="@color/Black"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/tv_chef_name_history_row"
            app:layout_constraintTop_toTopOf="@+id/tv_chef_name_history_row" />

    <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="7 items"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/view20"
            app:layout_constraintTop_toTopOf="@+id/tv_dish_name_history_row" />

    <TextView
            android:id="@+id/textView155"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Other charges"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@+id/tv_dish_name_history_row"
            app:layout_constraintTop_toBottomOf="@+id/tv_dish_name_history_row" />

    <TextView
            android:id="@+id/textView156"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="Rs.25"
            android:textColor="@color/Black"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView155" />
</androidx.constraintlayout.widget.ConstraintLayout>