<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent" android:id="@+id/nestedScrollView">


    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                app:srcCompat="@drawable/profile"
                android:scaleType="centerCrop"
                android:id="@+id/img_chef_profile_detail" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="12dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp"/>
        <TextView
                android:text="Anushka Shetty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/Black"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:id="@+id/tv_chef_name_detail_profile"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_chef_profile_detail"
                android:layout_marginStart="24dp"/>
        <TextView
                android:text="A2-503"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_flat_no_detail_profile"
                android:layout_marginStart="24dp"
                android:textColor="@color/DarkBlue"
                app:layout_constraintStart_toEndOf="@+id/img_chef_profile_detail"
                app:layout_constraintTop_toBottomOf="@+id/tv_chef_name_detail_profile"/>
        <TextView
                android:text="About"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:id="@+id/textView13"
                app:layout_constraintTop_toBottomOf="@+id/tv_flat_no_detail_profile"
                android:layout_marginStart="24dp"
                app:layout_constraintStart_toEndOf="@+id/img_chef_profile_detail"
                android:layout_marginTop="12dp"/>
        <TextView
                android:text="I am Soumen, I am a creative geek from provident wellworth city Marasandra"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_about_chef_detail_profile" android:layout_marginStart="24dp"
                app:layout_constraintStart_toEndOf="@+id/img_chef_profile_detail"
                app:layout_constraintTop_toBottomOf="@+id/textView13" android:maxLines="3"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
        <TextView
                android:text="Gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/Black"
                android:textStyle="bold"
                android:id="@+id/textView15" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp" android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/img_chef_profile_detail"/>
        <TextView
                android:text="Specility"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/Black"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:id="@+id/textView16"
                app:layout_constraintTop_toBottomOf="@+id/textView15" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp"/>
        <TextView
                android:text="Female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_chef_gende_detail_profile"
                android:layout_marginStart="14dp"
                app:layout_constraintStart_toEndOf="@+id/textView15"
                app:layout_constraintTop_toTopOf="@+id/textView15"/>
        <TextView
                android:text="Veg/ Non Veg Dishes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/tv_chef_specility_detail_profile" android:layout_marginStart="7dp"
                app:layout_constraintStart_toEndOf="@+id/textView16"
                app:layout_constraintTop_toTopOf="@+id/textView16"/>
        <TextView
                android:text="Other Ongoing Dishes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/DarkBlue"
                android:textStyle="bold"

                android:id="@+id/textView10" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp" android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@+id/textView16"/>
        <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView_signature_dishes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/textView10"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="4dp"/>


        <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_gravity="center"
                android:background="@color/LightGrey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView42"
                android:layout_marginTop="4dp" android:id="@+id/view4"/>

        <TextView
                android:text="Testimonials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11" android:textColor="@color/DarkBlue"
                android:textSize="16sp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/view4" android:layout_marginTop="4dp"/>

        <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/textView11" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="4dp" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/rv_testimonial"/>

        <TextView
                android:text="View all ongoing dishes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView42"
                app:layout_constraintTop_toBottomOf="@+id/recyclerView_signature_dishes"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="12dp" android:textColor="@color/Orange" android:textStyle="bold"
                android:layout_marginTop="4dp"/>
        <TextView
                android:text="@string/buy"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:id="@+id/textView43"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="10dp" app:layout_constraintTop_toBottomOf="@+id/rv_testimonial"
                android:background="@drawable/buy_button_round_corner" android:textColor="@color/White"
                android:onClick="loadCheckOut"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="50dp"
                android:gravity="center"/>
        <GridView
                android:layout_width="395dp"
                android:layout_height="35dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView43"/>


    </android.support.constraint.ConstraintLayout>


</android.support.v4.widget.NestedScrollView>