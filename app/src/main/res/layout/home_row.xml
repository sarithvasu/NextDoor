<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

    <ImageView
            android:layout_width="85dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/download"
            android:id="@+id/img_dish_image_home"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:srcCompat="@drawable/veg_symbol"
            android:id="@+id/img_dish_symbol_home"
            tools:ignore="ContentDescription"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_dish_image_home"
            android:layout_marginStart="4dp" android:layout_marginTop="4dp"/>
    <TextView
            android:text="Kadai Paneer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dish_name_home"
            android:textSize="16sp"
            android:textColor="@color/Black"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/img_dish_symbol_home"
            android:layout_marginStart="4dp" android:gravity="top"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:text="Rs. 999"
              android:textColor="@color/Black"
              android:id="@+id/tv_dish_price_home"
              android:textSize="14sp"
              android:layout_marginTop="4dp"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Keerthi A2-503"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_chef_name_with_flat_number_home"
            android:textSize="14sp"
            android:maxLength="20"
            app:layout_constraintTop_toBottomOf="@+id/tv_serving_home"
            app:layout_constraintStart_toEndOf="@+id/textView4" android:layout_marginStart="4dp"
    />
    <TextView
            android:text="11:00 am - 10:30 pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dish_available_time_home"
            android:textColor="@color/Black"
            android:textSize="14sp"
            android:textStyle="bold" android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@+id/tv_chef_name_with_flat_number_home"
            app:layout_constraintStart_toEndOf="@+id/img_dish_image_home" android:layout_marginStart="4dp"
    />
    <TextView
            android:text="1 Person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_serving_home"
            android:maxLength="12"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_dish_name_home"
            app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginStart="4dp"
    />


    <com.mikhaellopez.circularimageview.CircularImageView

            android:layout_width="60dp"
            android:layout_height="60dp" app:srcCompat="@drawable/profile"
            android:id="@+id/img_chef_profile_home"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/img_dish_image_home" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout" android:layout_marginEnd="2dp"/>


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="273dp"
            android:layout_height="33dp"
            android:id="@+id/linearLayout"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_dish_available_time_home" android:layout_marginStart="1dp"
            app:layout_constraintStart_toEndOf="@+id/img_chef_profile_home"
            app:layout_constraintEnd_toStartOf="@+id/btn_buy_home" android:layout_marginEnd="1dp"
    >

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

            <TextView
                    android:text="Dish Reviews"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:gravity="center"/>
            <TextView
                    android:text="Dish Sold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:gravity="center"/>
            <TextView
                    android:text="Abailable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_weight="1"
                    android:gravity="center" android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">
            <TextView
                    android:text="57"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_dish_reviews_home"
                    android:layout_weight="1"
                    android:textColor="@color/Black"
                    android:gravity="center"
                    android:textSize="12sp"/>
            <TextView
                    android:text="263"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_dish_sold_home"
                    android:layout_weight="1"
                    android:textColor="@color/Black"
                    android:gravity="center"
                    android:textSize="12sp"/>
            <TextView
                    android:text="10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_dish_available_home"
                    android:layout_weight="1"
                    android:textColor="@color/Black"
                    android:gravity="center"
                    android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
            android:text="@string/buy"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:id="@+id/btn_buy_home"
            android:background="@drawable/buy_button_round_corner"
            android:textColor="@color/White"
            android:padding="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="85dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_dish_price_home"
            app:layout_constraintStart_toEndOf="@+id/linearLayout" android:layout_marginStart="2dp"/>
    <TextView
            android:text="@string/serving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/tv_dish_name_home"
            app:layout_constraintStart_toEndOf="@+id/img_dish_image_home" android:layout_marginStart="4dp"
    />
    <TextView
            android:text="@string/chef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/img_dish_image_home" android:layout_marginStart="4dp"
    />
</android.support.constraint.ConstraintLayout>

