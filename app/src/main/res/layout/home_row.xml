<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

    <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            app:srcCompat="@drawable/download"
            android:id="@+id/img_dish_image_home"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:adjustViewBounds="true"
    />
    <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:srcCompat="@drawable/veg_symbol"
            android:id="@+id/img_dish_symbol_home"
            tools:ignore="ContentDescription"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_dish_image_home"
            android:layout_marginStart="4dp" android:layout_marginTop="4dp"/>
    <TextView
            android:text="Kadai Paneer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dish_name_home"
            android:textSize="18sp"
            android:textColor="@color/DarkGrey"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/img_dish_symbol_home"
            android:layout_marginStart="4dp" android:gravity="top"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textStyle="bold"
              android:text="Rs. 999"
              android:textColor="@color/DarkGrey"
              android:id="@+id/tv_dish_price_home"
              android:textSize="18sp"
              android:layout_marginTop="4dp"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Keerthi A2-503"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_chef_name_with_flat_number_home"
            android:textSize="16sp"
            android:maxLength="20"
            app:layout_constraintTop_toBottomOf="@+id/tv_serving_home"
            app:layout_constraintStart_toEndOf="@+id/textView4" android:layout_marginStart="4dp"
    />
    <TextView
            android:text="11:00 am - 10:30 pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dish_available_time_home"
            android:textColor="@color/DarkGrey"
            android:textSize="16sp"
            android:textStyle="bold" android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@+id/tv_chef_name_with_flat_number_home"
            app:layout_constraintStart_toEndOf="@+id/img_dish_image_home" android:layout_marginStart="4dp"
    />
    <TextView
            android:text="1 Person"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_serving_home"
            android:maxLength="12"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_dish_name_home"
            app:layout_constraintStart_toEndOf="@+id/textView3" android:layout_marginStart="4dp"
    />


    <com.mikhaellopez.circularimageview.CircularImageView

            android:layout_width="50dp"
            android:layout_height="50dp" app:srcCompat="@drawable/profile"
            android:id="@+id/img_chef_profile_home"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/tv_dish_available_time_home"/>


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_dish_available_time_home" android:layout_marginStart="1dp"
            app:layout_constraintStart_toEndOf="@+id/img_chef_profile_home"
            android:weightSum="2" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="3" android:layout_weight="1">

            <TextView
                    android:text="Dish Reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:gravity="center"/>
            <TextView
                    android:text="Dish Sold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:gravity="center"/>
            <TextView
                    android:text="Abailable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView7" android:layout_weight="1"
                    android:gravity="center" android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="3" android:layout_weight="1">
            <TextView
                    android:text="57"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_dish_reviews_home"
                    android:layout_weight="1"
                    android:textColor="@color/DarkGrey"
                    android:gravity="center"
                    android:textSize="14sp" android:paddingLeft="10dp"/>
            <TextView
                    android:text="263"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_dish_sold_home"
                    android:layout_weight="1"
                    android:textColor="@color/DarkGrey"
                    android:gravity="center"
                    android:textSize="14sp"/>
            <TextView
                    android:text="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_dish_available_home"
                    android:layout_weight="1"
                    android:textColor="@color/DarkGrey"
                    android:gravity="center"
                    android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
            android:text="@string/buy"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:id="@+id/btn_buy_home"
            android:background="@drawable/buy_button_round_corner"
            android:textColor="@color/White"
            android:padding="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="14dp" app:layout_constraintTop_toTopOf="@+id/tv_chef_name_with_flat_number_home"/>
    <TextView
            android:text="@string/serving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/tv_dish_name_home"
            app:layout_constraintStart_toEndOf="@+id/img_dish_image_home" android:layout_marginStart="4dp"
            android:textSize="16sp"/>
    <TextView
            android:text="@string/chef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/img_dish_image_home" android:layout_marginStart="4dp"
            android:textSize="16sp"/>
    <LinearLayout
            android:id="@+id/btn_lay"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:layout_marginTop="10dp" app:layout_constraintTop_toTopOf="@+id/tv_chef_name_with_flat_number_home"
            android:visibility="invisible">

        <TextView
                android:id="@+id/tv_minus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/SkyBlue"
                android:textSize="18sp"
                android:textStyle="bold" android:background="@drawable/quantity_btn"/>

        <TextView
                android:id="@+id/tv_qutity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="18sp" android:background="@color/White"/>

        <TextView
                android:id="@+id/tv_plus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/SkyBlue"
                android:textSize="18sp"
                android:textStyle="bold" android:background="@drawable/quantity_btn"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>

