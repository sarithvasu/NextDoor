<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent" android:background="@color/LightGrey">

    <TextView
            android:text="Write review for kadai paneer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView36" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp" android:textSize="18sp" android:textColor="@color/Black"
            android:textStyle="bold"/>
    <TextView
            android:text="Select Tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView39" android:textColor="@color/Black" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView36" android:layout_marginTop="12dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView39"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:weightSum="3"
            android:id="@+id/linearLayout2">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_weight="1" android:weightSum="3">
            <TextView
                    android:text="Awesome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textView47" android:layout_weight="1"
                    android:background="@color/White" android:layout_marginStart="4dp" android:layout_marginTop="4dp"
                    android:textColor="@color/SkyBlue" android:gravity="center" android:layout_marginEnd="4dp"/>
            <TextView
                    android:text="Yummy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textView45" android:layout_weight="1"
                    android:background="@color/White" android:layout_marginStart="4dp" android:layout_marginTop="4dp"
                    android:textColor="@color/SkyBlue" android:gravity="center" android:layout_marginEnd="4dp"/>
            <TextView
                    android:text="Delicious"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textView49" android:layout_weight="1"
                    android:background="@color/White" android:layout_marginStart="4dp" android:layout_marginTop="4dp"
                    android:textColor="@color/SkyBlue" android:gravity="center" android:layout_marginEnd="4dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_weight="1" android:weightSum="3"
                android:layout_marginTop="10dp">
            <TextView
                    android:text="Delight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textView51" android:layout_weight="1"
                    android:background="@color/White" android:layout_marginStart="4dp" android:layout_marginTop="4dp"
                    android:textColor="@color/SkyBlue" android:gravity="center" android:layout_marginEnd="4dp"/>
            <TextView
                    android:text="Moderate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textView50" android:layout_weight="1"
                    android:background="@color/White" android:layout_marginStart="4dp" android:layout_marginTop="4dp"
                    android:textColor="@color/SkyBlue" android:gravity="center" android:layout_marginEnd="4dp"/>
            <TextView
                    android:text="Not Bad"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textView52" android:layout_weight="1"
                    android:background="@color/White" android:layout_marginStart="4dp" android:layout_marginTop="4dp"
                    android:textColor="@color/SkyBlue" android:gravity="center" android:layout_marginEnd="4dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:layout_weight="1" android:weightSum="3"
                android:layout_marginTop="10dp">
            <TextView
                    android:text="Mouth Watering"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textView54" android:layout_weight="1"
                    android:background="@color/White" android:layout_marginStart="4dp" android:layout_marginTop="4dp"
                    android:textColor="@color/SkyBlue" android:gravity="center" android:layout_marginEnd="4dp"/>
            <TextView
                    android:text="Toothsome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textView53" android:layout_weight="1"
                    android:background="@color/White" android:layout_marginStart="4dp" android:layout_marginTop="4dp"
                    android:textColor="@color/SkyBlue" android:gravity="center" android:layout_marginEnd="4dp"/>
            <TextView
                    android:text="Not Good"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textView55" android:layout_weight="1"
                    android:background="@color/White" android:layout_marginStart="4dp" android:layout_marginTop="4dp"
                    android:textColor="@color/SkyBlue" android:gravity="center" android:layout_marginEnd="4dp"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
            android:text="Write Review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView56" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" android:textColor="@color/Black"/>
    <TextView
            android:hint="Valuable review of like or dislike of product"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:id="@+id/textView57"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView56"
            android:background="@color/White" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="12dp" android:maxLines="10"/>
    <TextView
            android:text="Submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView58" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center" android:background="@color/DarkBlue" android:textColor="@color/White"
            android:textSize="18sp" android:padding="4dp" android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>