<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context=".activity.MainActivity" android:background="#fffffb">


            <android.support.v4.view.ViewPager
                    android:id="@+id/SliderViewPager"
                    android:layout_width="0dp"
                    android:layout_height="220dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                    android:text="Sell Home made Food"
                    android:layout_width="175dp"
                    android:layout_height="175dp"
                    android:id="@+id/txt_sell"
                    android:drawableTop="@drawable/buy_small"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/SliderViewPager"
                    app:layout_constraintStart_toStartOf="parent"
                    android:elevation="10dp"
                    android:background="#fafafa"
                    android:gravity="center"
                    android:paddingTop="20dp" android:textSize="16sp"/>
            <TextView
                    android:text="Buy Home made food"
                    android:layout_width="175dp"
                    android:layout_height="175dp"
                    android:id="@+id/txt_buy" android:drawableTop="@drawable/sell_small"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/SliderViewPager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txt_sell"
                    android:layout_marginStart="12dp"
                    android:elevation="10dp"
                    android:background="#fafafa"
                    android:onClick="buyerOnClick"
                    android:gravity="center"
                    android:paddingTop="20dp" app:layout_constraintHorizontal_bias="0.0" android:textSize="16sp"/>
            <TextView
                    android:text="Share ride"
                    android:layout_width="175dp"
                    android:layout_height="175dp"
                    android:id="@+id/txt_ride"
                    android:drawableTop="@drawable/car_small"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="12dp"
                    android:background="#fafafa"
                    app:layout_constraintTop_toBottomOf="@+id/txt_sell"
                    android:elevation="10dp"
                    android:layout_marginBottom="18dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:gravity="center"
                    android:paddingTop="20dp" app:layout_constraintVertical_bias="0.0" android:textSize="16sp"/>
            <TextView
                    android:text="Profile"
                    android:layout_width="175dp"
                    android:layout_height="175dp"
                    android:id="@+id/txt_profile"
                    android:drawableTop="@drawable/profile_samll"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/txt_buy"
                    android:layout_marginBottom="18dp"
                    android:elevation="10dp"
                    android:background="#fafafa"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txt_ride"
                    android:layout_marginStart="12dp"
                    android:gravity="center"
                    android:paddingTop="20dp" app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="1.0" android:textSize="16sp"/>


        </android.support.constraint.ConstraintLayout>
    </HorizontalScrollView>
</ScrollView>