<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:padding="8dp"
                                                   android:background="@drawable/empty_border">

    <TextView
            android:text="Yummy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_review_tag_name_row" android:textSize="18dp"
            android:textColor="@color/Black" android:textStyle="bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="June 6th 2019"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_date_review_row"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="@+id/textView18" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/LightGrey"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView18" android:layout_marginTop="8dp"
            android:id="@+id/view10" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:id="@+id/view9" app:layout_constraintTop_toBottomOf="@+id/tv_review_tag_name_row"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:background="@color/LightGrey"/>
    <TextView
            android:text="Tanuja"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_buyer_name_review_row" android:textStyle="bold"
            android:textColor="@color/Black"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="@+id/textView17"
            app:layout_constraintEnd_toStartOf="@+id/tv_chef_address_with_flat_number_review_row"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="A2-503"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_chef_address_with_flat_number_review_row"
            android:textColor="@color/Black"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/tv_buyer_name_review_row" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingbar_review_rv"
            android:rating="5"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:progressTint="@color/Green"
            app:layout_constraintTop_toTopOf="@+id/tv_review_tag_name_row"
            android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Food is so delicious and tasty and i felt like eating more. Such a tasty and delicious food it is"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_review_discription_review_row"
            android:maxLines="5"
            android:justificationMode="inter_word"
            android:textSize="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/view10" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/LightGrey"
            android:id="@+id/view11" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_review_discription_review_row"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="69"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dish_likes_review_row"
            android:textSize="16dp"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="@+id/img_like_review_rv"
            app:layout_constraintEnd_toStartOf="@+id/img_dislike_review_rv" android:layout_marginEnd="4dp"/>
    <TextView
            android:text="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dish_dislikes_review_row"
            android:textSize="16dp"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="@+id/img_dislike_review_rv" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/like"
            android:id="@+id/img_like_review_rv"
            app:layout_constraintEnd_toStartOf="@+id/tv_dish_likes_review_row"
            android:layout_marginEnd="4dp"
            android:visibility="invisible"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/view11"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/dislike"
            android:id="@+id/img_dislike_review_rv"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="@+id/tv_dish_likes_review_row"
            app:layout_constraintEnd_toStartOf="@+id/tv_dish_dislikes_review_row"
            android:layout_marginEnd="4dp"/>
    <TextView
            android:text="Name and flat number:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView17" android:textSize="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/view9"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <TextView
            android:text="Other details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            app:layout_constraintTop_toBottomOf="@+id/textView17" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>