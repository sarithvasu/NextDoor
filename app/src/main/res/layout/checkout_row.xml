<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/nonveg_symbol"
            android:id="@+id/img_dish_symbol_rv"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <TextView
            android:text="Chicken Biryani"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dish_name_rv"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/img_dish_symbol_rv" android:textSize="16sp"
            android:textStyle="bold" android:textColor="@color/Black"/>
    <TextView
            android:text="Amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView19" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Unit Price:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView20" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_dish_name_rv"/>
    <TextView
            android:text="Rs.99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dish_price_rv"
            app:layout_constraintTop_toBottomOf="@+id/tv_dish_name_rv"
            app:layout_constraintStart_toEndOf="@+id/textView20" android:layout_marginStart="4dp"
            android:textStyle="bold"/>
    <TextView
            android:text="Rs.999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_total_dish_price_rv"
            app:layout_constraintTop_toBottomOf="@+id/textView19" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:textStyle="bold" android:textColor="@color/Black"/>
    <TextView
            android:text="Qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView23"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/tv_dish_price_rv"
            app:layout_constraintTop_toBottomOf="@+id/tv_dish_name_rv"/>
    <TextView
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView24"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/textView23"
            android:textSize="24sp"
            android:textColor="@color/DarkBlue"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="10"
            android:layout_width="33dp"
            android:layout_height="20dp"
            android:id="@+id/tv_dish_quantity_rv"
            app:layout_constraintTop_toTopOf="@+id/textView23" android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/textView24" android:textStyle="bold"
            android:textColor="@color/Black" android:textSize="16sp" android:gravity="center"/>
    <TextView
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView26"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/tv_dish_quantity_rv"
            android:textSize="20sp"
            android:textColor="@color/DarkBlue" android:layout_marginTop="25dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Rs.200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_packing_and_delivery_charges_rv"
            app:layout_constraintTop_toBottomOf="@+id/tv_total_dish_price_rv" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:textStyle="bold" android:textColor="@color/Black"/>
    <TextView
            android:text="Packing and Delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView28" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView20" android:textStyle="bold"/>
    <TextView
            android:text="8:15 PM - 8:30 PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dish_delivery_time_rv" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView28"/>
    <TextView
            android:text="Parcel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dish_packing_type_rv"
            app:layout_constraintTop_toBottomOf="@+id/textView28"
            android:layout_marginStart="10dp" app:layout_constraintStart_toEndOf="@+id/view2"/>


    <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:background="@color/Black"
            app:layout_constraintTop_toBottomOf="@+id/textView28"
            android:id="@+id/view3"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@+id/tv_dish_packing_type_rv" android:layout_marginStart="10dp"/>


    <TextView
            android:text="Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dish_delivery_type_rv"
            app:layout_constraintTop_toBottomOf="@+id/textView28" android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/view3"/>
    <TextView
            android:text="Edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView32"
            android:background="@color/Green"
            android:textColor="@color/White"
            android:padding="2dp"
            app:layout_constraintStart_toEndOf="@+id/tv_dish_delivery_type_rv" android:layout_marginStart="25dp"
            app:layout_constraintTop_toBottomOf="@+id/textView28"/>


    <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:background="@color/Black"


            app:layout_constraintTop_toBottomOf="@+id/textView28"
            android:layout_marginTop="4dp" android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/tv_dish_delivery_time_rv" android:id="@+id/view2"/>



    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/btn_dialog"
            android:id="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/tv_packing_and_delivery_charges_rv" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>


</android.support.constraint.ConstraintLayout>