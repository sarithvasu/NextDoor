<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/nonveg_symbol"
            android:id="@+id/img_dish_symbol_rv"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="12dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <TextView
            android:text="Chicken Biryani"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dish_name_rv"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/img_dish_symbol_rv" android:textSize="16dp"
            android:textStyle="bold" android:textColor="@color/Black"/>
    <TextView
            android:text="Amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView19" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="16dp"/>
    <TextView
            android:text="Unit Price:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView20" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_dish_name_rv" android:textSize="16dp"/>
    <TextView
            android:text="Rs.99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dish_price_rv"
            app:layout_constraintTop_toBottomOf="@+id/tv_dish_name_rv"
            app:layout_constraintStart_toEndOf="@+id/textView20" android:layout_marginStart="4dp"
            android:textStyle="bold" android:textSize="16dp"/>
    <TextView
            android:text="Rs.999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_total_dish_price_rv"
            app:layout_constraintTop_toBottomOf="@+id/textView19" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:textStyle="bold" android:textColor="@color/Black"
            android:textSize="16dp"/>
    <TextView
            android:text="Qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView23"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toEndOf="@+id/tv_dish_price_rv"
            app:layout_constraintTop_toBottomOf="@+id/tv_dish_name_rv" android:textSize="16dp"/>

    <LinearLayout

            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@+id/textView23" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/textView23" android:id="@+id/linearLayout5">

        <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="-"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                android:textStyle="bold"
                android:background="@drawable/quantity_btn" android:id="@+id/tv_minus_checkout_rv"/>

        <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                android:background="@color/White" android:id="@+id/tv_dish_quantity_rv"/>

        <TextView

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="+"
                android:textColor="@android:color/black"
                android:textSize="12dp"
                android:textStyle="bold"
                android:background="@drawable/quantity_btn" android:id="@+id/tv_plus_chechout_rv"/>
    </LinearLayout>

    <Button
            android:text="@string/buy"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:background="@drawable/buy_button_round_corner"
            android:textColor="@color/White"
            android:padding="0dp"
            app:layout_constraintTop_toTopOf="@+id/textView23" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/linearLayout5" android:id="@+id/btn_buy_button_checkout_rv"/>
    <TextView
            android:text="Rs.200"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_packing_and_delivery_charges_rv"
            app:layout_constraintTop_toBottomOf="@+id/tv_total_dish_price_rv" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:textStyle="bold" android:textColor="@color/Black"
            android:textSize="16dp"/>
    <TextView
            android:text="Packing and Delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView28" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView20" android:textStyle="bold" android:textSize="16dp"/>
    <TextView
            android:text="8:15 PM - 8:30 PM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dish_delivery_time_rv" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView28" android:textSize="16dp"/>
    <TextView
            android:text="Parcel in disposable box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dish_packing_type_rv"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_dish_delivery_time_rv"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>


    <TextView
            android:text="Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dish_delivery_type_rv"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="@+id/tv_dish_packing_type_rv" android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/tv_dish_packing_type_rv"/>
    <TextView
            android:text="Edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView32"
            android:background="@color/Green"
            android:textColor="@color/White"
            android:padding="2dp"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="@+id/tv_dish_delivery_type_rv" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>


</android.support.constraint.ConstraintLayout>